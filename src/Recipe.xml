<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="entity.Recipe">
        <table name="recipe" schema="whatcook" catalog=""/>
        <attributes>
            <id name="id">
                <column name="ID" precision="11"/>
            </id>
            <basic name="name">
                <column name="NAME" nullable="false" length="100"/>
            </basic>
            <basic name="img">
                <column name="IMG" nullable="false" length="225"/>
            </basic>
            <basic name="prepTime">
                <column name="PREP_TIME" nullable="false" precision="11"/>
            </basic>
            <basic name="cookTime">
                <column name="COOK_TIME" nullable="false" precision="11"/>
            </basic>
            <basic name="yeild">
                <column name="YEILD" nullable="false" length="45"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
